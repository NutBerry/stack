  "bin": {
    "nutberry-node": "nutberry-node.js"
  },
  "main": "js/index.js",
  "scripts": {
    "lint": "eslint . && solhint contracts/**/*{.sol,.slb}",
    "compile": "scripts/compile.js",
    "geth": "RPC_PORT=8222 ACCOUNTS=1 scripts/geth.js",
