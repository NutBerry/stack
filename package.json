    "develatus-apparatus": "https://github.com/pinkiebell/develatus-apparatus.git#v0.1.5",
    "eslint": "=6.0.1",
    "mocha": "=6.1.4",
    "solc": "=0.6.2",
    "solhint": "=2.1.0"
  }
}
